class timepacket
{
int id=0;
string packet;
int channel;
int sndtime=3000;
timer sndtimer;
tpcb@ callback;
string callback_data;
timepacket(int tid,string tpacket,int tchan,int stime, tpcb@ tcb=null, string cbdata="")
{
id=tid;
packet=tpacket;
channel=tchan;
sndtime=stime;
@callback=tcb;
callback_data=cbdata;
}
}
void timepacketloop()
{
for (uint i=0; i<timepackets.length(); i++)
{
if (timepackets[i].sndtimer.elapsed>=timepackets[i].sndtime)
{
send_reliable(timepackets[i].id,timepackets[i].packet,timepackets[i].channel);
if(@timepackets[i].callback!=null) timepackets[i].callback(@timepackets[i],timepackets[i].callback_data);
timepackets.remove_at(i);
return;
}
}
}
void spawn_timepacket(int id, string packet,int chan, int time, tpcb@ cb=null, string cbdat="")
{
timepacket tp1(id,packet,chan,time,cb,cbdat);
timepackets.insert_last(tp1);
}