void destroy_all_sat_bombs()
{
sat_bombs.resize(0);
}
void create_sat_bomb_from_datastream(string data)
{
dictionary d=deserialize(data);
int x=dget_int(d,"x"),y=dget_int(d,"y"),z=dget_int(d,"z"),code=dget_int(d,"code");
string map=dget_string(d,"map"),owner=dget_string(d,"owner");
sat_bomb m1(x,y,z,map,owner,code);
sat_bombs.insert_last(m1);
}
void create_sat_bomb_array_from_datastream(string stream)
{
dictionary@ temp=deserialize(stream);
string[] keys=temp.get_keys();
for(uint i=0; i<keys.length; i++)
{
string val=dget_string(temp,keys[i]);
create_sat_bomb_from_datastream(val);
}
@temp=null;
}
string[] create_datastream_from_sat_bomb(sat_bomb@ m)
{
dictionary d;
d.set("x",m.x);d.set("y",m.y);d.set("z",m.z);d.set("owner",m.owner);d.set("map",m.map);d.set("code",m.code);
string[] ret(2);
ret[0]=randomstring(5);
ret[1]=serialize(d);
return ret;
}
string create_datastream_from_sat_bomb_array()
{
dictionary d;
for(uint i=0; i<sat_bombs.length; i++)
{
string[] r=create_datastream_from_sat_bomb(sat_bombs[i]);
d.set(r[0],r[1]);
}
return serialize(d);
}