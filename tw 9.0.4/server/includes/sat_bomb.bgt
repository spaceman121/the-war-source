{
remguns[i2].health-=random(5000, 15000);
remguns[i2].hitby=sat_bombs[i].owner+"'s sat_bomb";
play("remgunhit"+random(1, 3),remguns[i2].x,remguns[i2].y,remguns[i2].z,remguns[i2].map);
}
}
for(uint s=0; s<shelters.length; s++)
{
if(get_3d_distance(sat_bombs[i].x,sat_bombs[i].y,sat_bombs[i].z,shelters[s].x,shelters[s].y,shelters[s].z)<=30&&shelters[s].map==sat_bombs[i].map)
shelters[s].hit(random(5000,15000),sat_bombs[i].owner+"'s sat_bomb");
