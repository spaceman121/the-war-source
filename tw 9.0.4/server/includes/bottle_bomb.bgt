for(uint x=0; x<players.length(); x++)
{
if(in_vehicle(players[x].name)>-1 or players[x].newb==1 or players[x].is_dead or players[x].invinsible) continue;
if(get_3d_distance(bottle_bombs[j].x,bottle_bombs[j].y,bottle_bombs[j].z,players[x].x,players[x].y,players[x].z)<=bottle_bombs[j].range and players[x].map==bottle_bombs[j].map)
{
