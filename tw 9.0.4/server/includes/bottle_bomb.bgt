}
}
for(uint x=0; x<impact_bombs.length(); x++)
{
if(get_3d_distance(bottle_bombs[j].x,bottle_bombs[j].y,bottle_bombs[j].z,impact_bombs[x].x,impact_bombs[x].y,impact_bombs[x].z)<=20 and bottle_bombs[j].map==impact_bombs[x].map)
