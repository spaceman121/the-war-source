for(uint s=0; s<shelters.length; s++)
{
if(get_3d_distance(bottle_bombs[j].x,bottle_bombs[j].y,bottle_bombs[j].z,shelters[s].x,shelters[s].y,shelters[s].z)<=bottle_bombs[j].range&&shelters[s].map==bottle_bombs[j].map)
shelters[s].hit(random(3000,6000),bottle_bombs[j].owner+"'s bottle_bomb","bottle bomb");
