{
int amount=1;
string itemtype;
string map;
int x,y,z;
int spawntime;
timer stimer;
bool should_drop;
timeitem(int tx, int ty, int tz, string tmap, string ttype,int tamount, int tspawntime, bool drop=false)
{
x=tx;
y=ty;
z=tz;
map=tmap;
itemtype=ttype;
amount=tamount;
